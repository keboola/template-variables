{
    "name": "keboola/template-variables",
    "license": "MIT",
    "type": "library",
    "description": "Library for replacing placeholder variables in templates",
    "keywords": [
        "keboola",
        "template",
        "variables",
        "placeholders"
    ],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\TemplateVariables\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\TemplateVariables\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "mustache/mustache": "^2.13",
        "symfony/config": "^5.0",
        "symfony/validator": "^5.0"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpstan/phpstan-shim": "^0.11",
        "phpunit/phpunit": "^8.0",
        "keboola/coding-standard": ">=7.0.2"
    },
    "scripts": {
        "tests": "phpunit --coverage-clover build/logs/clover.xml --coverage-xml=build/logs/coverage-xml --log-junit=build/logs/phpunit.junit.xml",
        "phpstan": "phpstan analyse --no-progress --level=max src tests -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "phpcbf": "phpcbf --extensions=php src tests",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 3600
    }
}
